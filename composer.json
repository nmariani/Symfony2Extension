{
    "name": "nmariani/symfony2-extension",
    "type": "behat-extension",
    "description": "Symfony2 framework extension for Behat",
    "keywords": ["symfony", "framework", "bdd"],
    "homepage": "http://behat.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Konstantin Kudryashov",
            "email": "ever.zet@gmail.com"
        }
    ],

    "require": {
        "php":                       ">=5.3.2",
        "nmariani/behat":            ">=2.4.0",
        "symfony/framework-bundle":  ">=2.0.0"
    },

    "require-dev": {
        "nmariani/mink":                 "dev-master",
        "symfony/symfony":               "dev-master",
        "nmariani/mink-extension":          "dev-master",
        "nmariani/mink-browserkit-driver":  "dev-master"
    },

    "autoload": {
        "psr-0": { "Behat\\Symfony2Extension": "src/" }
    }
}
